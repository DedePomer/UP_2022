<Application x:Class="UP_2022.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UP_2022"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Segoe Print" />
            </Style.Setters>
        </Style>

        <Style x:Key="StackPanelPink" TargetType="StackPanel">
            <Style.Setters>
                <Setter Property="Background" Value="#FEA9AB"/>
            </Style.Setters>
        </Style>


        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Background" Value="#EAB14D"/>
            </Style.Setters>
        </Style>

        <Style TargetType="TextBox">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Segoe Print"/>
            </Style.Setters>
        </Style>
    </Application.Resources>
</Application>
